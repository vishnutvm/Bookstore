


<section class="px-5 pt-5 ">

<div class="table-responsive mt-5">
  <table class="table table-borderless " id="usertable">
    <thead class="" >
      <tr class="border border-1 border-seconday border-start-0 border-end-0">
        <th scope="col">#</th>
        <th scope="col">Date</th>
        <th scope="col">Amount</th>
        <th scope="col">Method</th>
        <th scope="col">Status</th>
        <th scope="col">Action</th>

      </tr>
    </thead>
    <tbody>
   {{#each orders}}
      <tr>
        <th scope="row"></th>
        <td>{{this.date}}</td>
        <td>{{this.totalPrice}}</td>
        <td>{{this.paymentMethod}}</td>
        <td>Order {{this.status}}</td>
         
        <td>

               
{{!-- view the products which orderd --}}
                   <a  href="/view-orderd-products/{{this._id}}" class="btn btn-success mb-1">View Detaills</a>
          
          {{!-- cancel the order --}}
           <a data-bs-toggle="modal" data-bs-target="#ModelCancel{{this._id}}" class="btn btn-danger ">Cancel</a>


                   <div class="modal fade" id="ModelCancel{{this._id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-danger" id="exampleModalLabel">Are you sure to Cancel the Order?</h5>
      
      </div>
  
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <a href="/cancelOrder/{{this._id}}" type="button" class="btn btn-danger">Conform</a>
      </div>
    </div>
  </div>
</div>







          </td>
          
      </tr>

{{/each}}

    </tbody>
  </table>
</div>



</section>




<script>

$(document).ready( function () {
    $('#usertable').DataTable();
} );
</script>


