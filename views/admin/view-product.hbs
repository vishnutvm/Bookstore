



<!-- Example single danger button -->



<section class="px-5 pt-5 ">

    <a href="/admin/add-product" class="btn btn-primary mb-2">Add Prodcut</a>
    <a href="" class="btn btn-primary mb-2">Add Coupon</a>
    

    {{!-- category --}}


<div class="btn-group">
  <a  class="btn btn-primary dropdown-toggle mb-2" data-bs-toggle="dropdown" aria-expanded="false">
   Category
  </a>
  <ul class="dropdown-menu">
    <li ><a class="dropdown-item" href="manage-category">Category</a></li>
    <li><a class="dropdown-item" href="mange-subCategory">Sub category</a></li>

  </ul>
</div>





<div class="table-responsive mt-5">
  <table class="table table-borderless table-responsive " id="productTable">
    <thead class="" >
      <tr class="border border-1 border-seconday border-start-0 border-end-0">
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Category</th>
        <th scope="col">Sub Category</th>
        <th scope="col">Price</th>
        <th scope="col">Stoke</th>
        <th scope="col">Image</th>
        <th scope="col">Edit/Delete</th>

      </tr>
    </thead>
    <tbody>
   {{#each product}}
      <tr>
        <th></th>
        <td>
          {{this.name}}
          <br>
          -{{this.authname}}
        </td>
        <td>{{this.category}} </td>
        <td>{{this.subcategory}}</td>
        <td>{{this.price}}</td>
        <td>{{this.stock}}</td>
        <td><div style="width: 50px; height:80px">

             <img style="width:100%; height:100%" src="/product-images/{{this._id}}.jpg" alt="product">
        </div>
       
          </td>

         
        <td>


    
           <a data-bs-toggle="modal" data-bs-target="#ModelEdit{{this._id}}" class="btn btn-danger mb-2">Edit</a>


                   <div class="modal fade" id="ModelEdit{{this._id}}" tabindex="-1" aria-labelledby="usereditmodel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-success" id="usereditmodel">Are you sure to Edit {{this.name}} ?</h5>
      
      </div>
  
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <a href="/admin/EditProduct/{{this._id}}" type="button" class="btn btn-success">Edit</a>
      </div>
    </div>
  </div>
</div>
    
                    <a data-bs-toggle="modal" data-bs-target="#ModelDelete{{this._id}}#ModelDelete{{this._id}}" class="btn btn-danger mb-2">Delete</a>



                    <div class="modal fade" id="ModelDelete{{this._id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-danger" id="exampleModalLabel">Are you sure to Delete {{this.name}} ?</h5>
      
      </div>
  
      <div class="modal-footer ">
        <button type="button" class="btn btn-secondary " data-bs-dismiss="modal">Cancel</button>
        <a href="/admin/DeleteProduct/{{this._id}}" type="button" class="btn btn-danger ">Delete</a>

    
      </div>
    </div>
  </div>
</div>
       
          </td>
          
      </tr>

{{/each}}

    </tbody>
  </table>
</div>




</section>




<script>

$(document).ready( function () {
    $('#productTable').DataTable();
} );
</script>
