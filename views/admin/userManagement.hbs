<section class="px-5 pt-5 text-center">

<div class="table-responsive mt-5">
  <table class="table table-hover table-borderless">
    <thead >
      <tr class="border border-1 border-seconday border-start-0 border-end-0">
        <th scope="col">No</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Address</th>
        <th scope="col">Phone</th>
        <th scope="col">Action</th>

      </tr>
    </thead>
    <tbody>
   {{#each allUsersDetails}}
      <tr>
        <th scope="row"></th>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        <td>{{this.address}}</td>
        <td>{{this.phone}}</td>

         
        <td>

            {{#if this.blocked}}

    
           <a href="/admin/Unblock?id={{this._id}}" class="btn btn-danger ">Unblock</a>
          
          {{else}}
                    <a href="/admin/block?id={{this._id}}" class="btn btn-danger ">Block</a>
          {{/if}}
          </td>
      </tr>

{{/each}}

    </tbody>
  </table>
</div>
</section>